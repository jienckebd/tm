{#
/**
 * @file
 * Theme override for a entity edit form.
 *
 * Two column template for the entity add/edit form.
 *
 * This template will be used when a entity edit form specifies 'entity_edit_form'
 * as its #theme callback.  Otherwise, by default, entity add/edit forms will be
 * themed by form.html.twig.
 *
 * Available variables:
 * - form: The entity add/edit form.
 *
 * @see seven_form_entity_form_alter()
 */
#}
<div class="layout-entity-form clearfix">

  <div class="layout-region layout-region-entity-main">

    {% if form.messages %}
      {{ form.messages }}
    {% endif %}

    <div class="layout-region-entity-main-inner js-auto-set-height">
      {{ form|without('advanced', 'footer', 'messages') }}
    </div>
  </div>

  {% if form.advanced and not hide_advanced %}
  <div class="layout-region layout-region-entity-secondary">
    <div class="layout-filler"></div>
    <div class="layout-region-entity-secondary-inner">
      {{ form.advanced }}
    </div>
  </div>
  {% endif %}

  <div class="layout-region layout-region-entity-footer">
    <div class="layout-region-entity-footer-inner">
      {{ form.footer }}
    </div>
  </div>

</div>
