{#
/**
 * @file
 * Template for the main page.
 */
#}

<div id="ajax--progress--page" class="ajax--progress"><i class="fa fa-cog fa-spin"></i></div>
<div id="ajax--overlay--page" class="ajax--overlay"></div>

<header id="header">
  <div id="header-inner" class="container">
    <div id="header-top" class="row">
      <div id="header-left" class="col-sm-3">
        <div id="header-logo">
          <a href="/">
            <img class="logo-animated" src="/themes/custom/tm_theme_one/assets/images/logo.png"/>
            <img class="logo-small" src="/themes/custom/tm_theme_one/assets/images/logo.png"/>
          </a>
        </div>
      </div>
      <div id="header-right" class="col-sm-9">

        <div id="header-menu">
          {{ main_menu }}
        </div>
        <div id="header-mobile-search">
          <div id="header-mobile-search-inner">
            {{ search_form_mobile }}
            Results will autocomplete here.
          </div>
        </div>
      </div>
    </div>
    <div id="header-mobile-toggle">
      <i class="fa fa-bars"></i>
    </div>

    {% if page.highlight %}
    <div id="highlighted" class="container">
      <div id="highlighted-inner" class="container">
        <div class="row">
          {{ page.highlight }}
        </div>
      </div>
    </div>
    {% endif %}

  </div>
</header>

<div id="header-search-modal">
  <div id="header-search-modal-inner" class="cog--mq">
    <div id="header-search-form">{{ search_form }}</div>
    <div id="header-search-content"><br><br>When the user searches, the results can Ajax autocomplete here with images.</div>
  </div>
</div>

<main role="main">
  <div class="container">
    <div class="page-wrapper page-content clearfix">

      {% if page.sidebar_left %}
        <div class="region--sidebar-left region">
          <div class="region--inner">
            {{ page.sidebar_left }}
          </div>
        </div>
      {% endif %}

      {% if page.sidebar_right %}
        <div class="region--sidebar-left region">
          <div class="region--inner">
            {{ page.sidebar_right }}
          </div>
        </div>
      {% endif %}

      {% if page.content %}
        <div class="region--content region">
          <div class="region--inner">
            {% if title %}
            {% endif %}
            {{ page.content }}
          </div>
        </div>
      {% endif %}

    </div>
  </div>

  <footer id="footer" class="clearfix">
    <div id="footer-menu">
      {{ footer_menu }}
    </div>
    <div id="footer-brand"><a href="http://collectivenext.com/" target="_blank">{% trans %}A Collective Next Production{% endtrans %}</a></div>
  </footer>

</main>
